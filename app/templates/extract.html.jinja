{% extends "layout.html.jinja" %}

{% block middle  %}
    <h2 style="color: #5F9EA0;"> Opinions extraction </h2>
    <h3>{{ test }}</h3>
    {% if form.productId.errors %}
        <div class="alert alert-danger" role="alert" style="color: #5F9EA0;">
            {% for error in form.productId.errors  %}
                <p>{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}
    <form method="POST" action="{{ url_for('extract') }}" style="color: #5F9EA0;">
        {{ form.csrf_token }}
        {{ form.productId.label }} {{ form.productId(size=20) }}
        {{ form.submit(class_="btn btn-info")}}
    </form>
{% endblock middle %}
